<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.galaxcom.proyectosemana4c3.fragments.PerfilFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgPerfilMascota"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/perro1"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="4dp"
        app:civ_shadow="false"
        app:civ_shadow_color="@color/colorNegro"
        app:civ_shadow_radius="0"
        app:civ_border="true"/>

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/txtNombrePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/nombreMascotaPerfil"
        android:layout_below="@id/imgPerfilMascota"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFotosPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNombrePerfil"
        android:layout_marginTop="20dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>

